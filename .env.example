# Laravel VeriFactu Configuration

# Issuer Information
VERIFACTU_ISSUER_NAME="Your Company SL"
VERIFACTU_ISSUER_VAT=B12345678

# AEAT Certificate
VERIFACTU_CERT_PATH="/path/to/certificate.pfx"
VERIFACTU_CERT_PASSWORD="your_certificate_password"
VERIFACTU_PRODUCTION=false

# Billing Mode
# true = VERIFACTU mode (standard online invoicing, no XAdES signature required)
# false = NO VERIFACTU mode / Requerimiento (requires RefRequerimiento from AEAT, XAdES signature required)
VERIFACTU_MODE=true

# Computer System Information (Sistema Inform√°tico)
VERIFACTU_SYSTEM_NAME="LaravelVerifactu"
VERIFACTU_SYSTEM_ID="LV"
VERIFACTU_SYSTEM_VERSION="1.0"
VERIFACTU_INSTALLATION_NUMBER="001"

# System Capability Parameters (values: S=Yes, N=No per AEAT specification)
# Can the system ONLY operate in VERIFACTU mode?
# S = System can ONLY be used in VERIFACTU mode
# N = System can be used in both VERIFACTU and NO VERIFACTU modes
VERIFACTU_ONLY_VERIFACTU_CAPABLE=S

# Does the system support multiple obligated entities (multi-tenant)?
# S = System can manage multiple obligated entities
# N = System only manages a single obligated entity
VERIFACTU_MULTI_OT_CAPABLE=N

# Are there currently multiple obligated entities using the system?
# S = Multiple obligated entities exist
# N = Only one obligated entity exists
VERIFACTU_HAS_MULTI_OT=N

# Migrations
# true = Use package models and migrations (new projects)
# false = Use your own models implementing the contracts (existing systems)
VERIFACTU_LOAD_MIGRATIONS=false
